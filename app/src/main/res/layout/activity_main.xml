<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_above="@+id/result_tv"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="3dp"
        android:textAlignment="textEnd"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_above="@+id/allbts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="0"
        android:textSize="50dp"
        android:layout_margin="12dp"
        android:textAlignment="textEnd"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:id="@+id/allbts">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                app:cornerRadius="36dp"
                android:backgroundTint="@color/darkgray"
                android:layout_margin="7dp"
                android:text="ac"
                android:textColor="@color/black"
                android:id="@+id/ac"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:layout_margin="7dp"
                android:text="c"
                android:textColor="@color/black"
                android:id="@+id/c"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:layout_margin="7dp"
                android:text="%"
                android:textColor="@color/black"
                android:id="@+id/per"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/orange"
                android:layout_margin="7dp"
                app:cornerRadius="36dp"
                android:text="/"
                android:textColor="@color/black"
                android:id="@+id/div"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="7"
                android:id="@+id/seven"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="8"
                android:id="@+id/eight"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="9"
                android:id="@+id/nine"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/orange"
                app:cornerRadius="36dp"
                android:text="*"
                android:id="@+id/mul"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="4"
                android:id="@+id/four"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="5"
                android:id="@+id/five"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="6"
                android:id="@+id/six"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/orange"
                app:cornerRadius="36dp"
                android:text="-"
                android:id="@+id/sub"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="1"
                android:id="@+id/one"
                android:textColor="@color/black"
                android:layout_margin="7dp"                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="2"
                android:id="@+id/two"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="3"
                android:id="@+id/three"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/orange"
                app:cornerRadius="36dp"
                android:text="+"
                android:id="@+id/add"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:layout_width="26mm"
                android:layout_height="12mm"
                android:textAlignment="viewStart"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="0"
                android:id="@+id/zero"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="@color/darkgray"
                app:cornerRadius="36dp"
                android:text="."
                android:id="@+id/dot"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="12mm"
                android:layout_height="12mm"
                android:backgroundTint="#57B2EF"
                app:cornerRadius="36dp"
                android:text="="
                android:id="@+id/result"
                android:textColor="@color/black"
                android:layout_margin="7dp"
                />

        </LinearLayout>
    </LinearLayout>




</RelativeLayout>